const { createCanvas } = require('canvas');
const fs = require('fs');
const path = require('path');

function generateFavicon() {
    const sizes = [16, 32, 48];
    
    sizes.forEach(size => {
        const canvas = createCanvas(size, size);
        const ctx = canvas.getContext('2d');
        
        // Ù¾Ø³â€ŒØ²Ù…ÛŒÙ†Ù‡ Ø¢Ø¨ÛŒ ØªÛŒØ±Ù‡
        ctx.fillStyle = '#19234b';
        ctx.fillRect(0, 0, size, size);
        
        // Ù†Ù…ÙˆØ¯Ø§Ø± Ø³Ø¨Ø²
        ctx.strokeStyle = '#00c896';
        ctx.lineWidth = Math.max(2, size / 16);
        ctx.lineJoin = 'round';
        
        const padding = size * 0.2;
        const chartWidth = size - (padding * 2);
        const chartHeight = size - (padding * 2);
        
        // Ø±Ø³Ù… Ø®Ø· Ù†Ù…ÙˆØ¯Ø§Ø± ØµØ¹ÙˆØ¯ÛŒ
        ctx.beginPath();
        ctx.moveTo(padding, padding + chartHeight * 0.7);
        ctx.lineTo(padding + chartWidth * 0.3, padding + chartHeight * 0.3);
        ctx.lineTo(padding + chartWidth * 0.6, padding + chartHeight * 0.5);
        ctx.lineTo(padding + chartWidth, padding + chartHeight * 0.2);
        ctx.stroke();
        
        // Ø°Ø®ÛŒØ±Ù‡ ÙØ§ÛŒÙ„
        const buffer = canvas.toBuffer('image/png');
        const filename = `favicon-${size}x${size}.png`;
        fs.writeFileSync(path.join(__dirname, '../public/', filename), buffer);
    });
    
    console.log('âœ… Favicon files generated');
    console.log('ğŸ“ Convert favicon-32x32.png to favicon.ico using online tools');
}

generateFavicon();
